<%- include("components/head.ejs") %>
    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center" style="margin-bottom: 50px;">
                                        <a href="/">
                                            <img src="/images/logo.png" style="width: 185px; border-radius: 10px;"
                                                alt="logo">
                                        </a>
                                    </div>


                                    <form action="/register" method="post">

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example11">Email</label>
                                            <input type="email" id="form2Example11" class="form-control"
                                                placeholder="" name="username" />
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example22">Mật khẩu</label>
                                            <input type="password" id="form2Example22" class="form-control" name="password" />
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example22">Nhập lại mật khẩu</label>
                                            <input type="password" id="form2Example22" class="form-control" name="repassword" />
                                        </div>


                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button data-mdb-button-init data-mdb-ripple-init
                                                class="btn btn-danger btn-block fa-lg mb-3" type="submit">
                                                Đăng kí
                                            </button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <img width="100%" src="/images/quangcaoLogin.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            const password = document.querySelector('input[name="password"]').value;
            const repassword = document.querySelector('input[name="repassword"]').value;

            if (password !== repassword) {
                alert('Mật khẩu và Nhập lại mật khẩu không khớp!');
                e.preventDefault(); // Chặn không gửi form, trang không bị reload
                return false; // Dừng tại đây
            }

            // Nếu mật khẩu khớp thì form sẽ tự gửi bình thường
        });
    </script>


