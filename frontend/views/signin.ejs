<%- include("components/head.ejs") %>

    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center" style="margin-bottom: 50px;">
                                        <a href="/">
                                            <img src="/images/logo.png" style="width: 185px; border-radius: 10px;"
                                                alt="logo">
                                        </a>
                                    </div>

                                    <form action="/login" method="POST">

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example11">Email</label>
                                            <input type="username" id="form2Example11" class="form-control" name="username"
                                                placeholder="" />
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example22">Mật khẩu</label>
                                            <input type="password" id="form2Example22" class="form-control" name="password" />
                                        </div>


                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button data-mdb-button-init data-mdb-ripple-init
                                                class="btn btn-danger btn-block fa-lg mb-3" type="submit">
                                                Đăng nhập
                                            </button>
                                        </div>
                                    </form>

                                    <form action="/register" method="get">
                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <p class="mb-0 me-2">Bạn chưa có tài khoản?</p>
                                            <button data-mdb-button-init data-mdb-ripple-init
                                                class="btn btn-outline-danger">Đăng kí</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <img width="100%" src="/images/quangcaoLogin.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("components/foot.ejs") %>